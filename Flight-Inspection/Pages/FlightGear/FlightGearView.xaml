<Page x:Name="FlightGear" x:Class="Flight_Inspection.Pages.FlightGear.FlightGearView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:flightgear="clr-namespace:Flight_Inspection.Pages.FlightGear"
             d:DataContext="{d:DesignInstance Type=flightgear:FlightGearViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
      Background="Transparent">

    <Grid>
        <Button x:Name="Start_FG" Content="open FG" HorizontalAlignment="Right" Margin="0,116,173,0" VerticalAlignment="Top" Width="167" Height="58" Click="Start_FG_Click" Background="Black" Foreground="White" BorderBrush="Black" FontStretch="Condensed" FontWeight="ExtraBlack" FontSize="22" FontStyle="Italic"/>
        <Button x:Name="Start_Simulation" Content="Start Simulation" Margin="0,193,173,0" Width="167" Height="64" Click="Start_Simulation_Click" BorderBrush="{x:Null}" Foreground="White" Background="Black" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="19" FontStretch="Condensed" FontStyle="Italic" FontWeight="ExtraBlack"/>
    </Grid>
</Page>
