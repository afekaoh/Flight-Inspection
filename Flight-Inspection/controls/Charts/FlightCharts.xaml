<UserControl x:Name="Charts" x:Class="Flight_Inspection.controls.FlightCharts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection.controls"
             mc:Ignorable="d" 
             xmlns:winformchart="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization" d:DataContext="{d:DesignInstance Type=local:VMCharts}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListBox Name="lbTodoList" HorizontalContentAlignment="Stretch" MouseDoubleClick="choosenOption" KeyUp="lbTodoList_KeyDown" Width="150" Grid.RowSpan="3"  Margin="5,5,5,5">
            <ListBox.ItemTemplate >
                <DataTemplate >
                    <ContentControl Content="{Binding Name}"  />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--<Canvas Grid.Column="1" Height="150" Margin="5,5,5,5" Name="chart1" Background="BlueViolet">
        </Canvas>-->
        <StackPanel Grid.Column="1" Height="150" Margin="5,5,5,5">
            <WindowsFormsHost Height="150" Margin="5,5,5,5" >
                <winformchart:Chart x:Name="chart1" Dock="None"  >
                    <winformchart:Chart.Series>
                        <winformchart:Series Name="series" ChartType="Line" Font="Ariel"/>
                    </winformchart:Chart.Series>
                    <winformchart:Chart.ChartAreas>
                        <winformchart:ChartArea Name="chartArea" />
                    </winformchart:Chart.ChartAreas>
                </winformchart:Chart>

            </WindowsFormsHost>
        </StackPanel>

        <StackPanel Grid.Column="2" Height="150" Margin="5,5,5,5">
            <WindowsFormsHost Height="150" Margin="5,5,5,5" >
                <winformchart:Chart x:Name="chart2" Dock="None" >
                    <winformchart:Chart.Series>
                        <winformchart:Series Name="seriesSecond" ChartType="Line" Font="Ariel" LabelForeColor="DarkGray"/>
                    </winformchart:Chart.Series>
                    <winformchart:Chart.ChartAreas>
                        <winformchart:ChartArea Name="chartAreaSecond" />
                    </winformchart:Chart.ChartAreas>
                </winformchart:Chart>

            </WindowsFormsHost>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Height="150" Margin="5,5,5,5">
            <WindowsFormsHost Height="150" Margin="5,5,5,5" >
                <winformchart:Chart x:Name="chart3" Dock="None" >
                    <winformchart:Chart.Series>
                        <winformchart:Series Name="seriesThird" ChartType="Point" Font="Ariel" LabelForeColor="DarkGray"/>
                        <winformchart:Series Name="lineCor" ChartType="Line" Font="Ariel" LabelForeColor="DarkGray"/>
                    </winformchart:Chart.Series>
                    <winformchart:Chart.ChartAreas>
                        <winformchart:ChartArea Name="chartAreaThird"  />
                    </winformchart:Chart.ChartAreas>
                </winformchart:Chart>

            </WindowsFormsHost>
        </StackPanel>

    </Grid>
</UserControl>
