<UserControl x:Name="Joystick" x:Class="Flight_Inspection.controls.Joystick.JoystickView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection.controls.Joystick" 
             d:DataContext="{d:DesignInstance Type=local:JoystickViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="0" Grid.Row="0">
            <Rectangle Width="10" Height="200" Fill="Gray" Canvas.Left="100" Canvas.Top="40" />
            <Rectangle Width="10" Height="20" Fill="Red" Canvas.Left="100" Canvas.Top="{Binding VM_Throttle}" />
        </Canvas>
        <TextBlock Text="{Binding VM_Aileron}" FontSize="64" ></TextBlock>
        <Button Content="Button" Height="100" Width="254" Margin="495,234,51,35" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="TextBlock"/><InlineUIContainer>
                <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
            </InlineUIContainer></TextBlock>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="264.4,10,0,0" TextWrapping="Wrap" Text="Aileron" VerticalAlignment="Top" Width="100" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="-33,162,0,0" TextWrapping="Wrap" Text="Throttle" VerticalAlignment="Top" Background="Gray" Width="120" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.514"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Canvas Grid.Column="1" Grid.Row="0">
            <Ellipse Width="50" Height="50" Canvas.Left= "{Binding VM_Aileron}" Canvas.Top="{Binding VM_Elevator}" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Yellow" />
        </Canvas>
        <Canvas Grid.Column="1" Grid.Row="1">
            <TextBox Text=" Rudder" Canvas.Left="330"/>
            <Rectangle Height="20" Width="400" Fill="Gray" Margin="150,20"></Rectangle>
            <Rectangle Fill="Black" Canvas.Left="{Binding VM_Rudder}" Height="20" Width="50" Canvas.Top="20"></Rectangle>
        </Canvas>

    </Grid>
</UserControl>
